APP="red_pack_productions"

BUILD_HOST="redpackproductions.com"
BUILD_USER="jvanputten"
BUILD_AT="/home/jvanputten/app_build"

PRODUCTION_HOSTS="redpackproductions.com" 
PRODUCTION_USER="jvanputten" 
DELIVER_TO="/home/jvanputten/app_release"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/jvanputten/app_config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}