<!DOCTYPE html>
<html lang="en">
  <head>

     <!-- Global Site Tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-107269269-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments)};
      gtag('js', new Date());
      gtag('config', 'UA-107269269-1');
    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Open Graph -->
    <meta property="og:locale" content="nl_NL" />
    <meta property="og:locale:alternate" content="en_GB" />
    <meta property="og:type" content="website" />

    <meta property="og:title" content="<%= @conn.assigns.title %>" />
    <meta property="twitter:title" content="<%= @conn.assigns.title %>" />
    <meta property="og:description" content="<%= @conn.assigns.og_description %>" />

    <meta property="og:site_name" content="Red Pack Productions" />
    
    <meta property="og:url" content="<%= get_current_url(@conn) %>" />
    <meta property="og:image" content="<%= static_url(@conn, "/images/rp_logo.png") %>" />
    <meta property="twitter:image" content="<%= static_url(@conn, "/images/rp_logo.png") %>" /> 

    <title>Red Pack Productions</title>

    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">

