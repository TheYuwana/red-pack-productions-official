<!DOCTYPE html>
<html lang="en">
  <head>

     <!-- Global Site Tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-107269269-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments)};
      gtag('js', new Date());
      gtag('config', 'UA-107269269-1');
    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Red Pack Productions</title>

    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">

    <link href="https://fonts.googleapis.com/css?family=PT+Sans|Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/vendor.css") %>">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">


  </head>

  <body>
    <div class="container">
      
      <div class="pre-header hidden-xs hidden-sm">
        
      </div>
      
      <img src="/images/rp_logo.png" class="header-logo-mobile hidden-md hidden-lg">

      <header class="header">

        <!-- MOBILE NAVIGATION -->
        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='<%= if @conn.request_path == "/" do %> nav-active <%= end %>'
           href="/">HOME</a>
        </div>

        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='nav-scroller <%= if @conn.request_path == "/packages" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #packages <%= else %> /#packages <%= end %>'>PACKAGES</a>
        </div>

        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='nav-scroller <%= if @conn.request_path == "" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #soundcloud <%= else %> /#soundcloud <%= end %>'>RECORDINGS</a>
        </div>
        
        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='nav-scroller <%= if @conn.request_path == "/samples" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #samples <%= else %> /#samples <%= end %>'>SAMPLES</a>
        </div>
        
        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='nav-scroller <%= if @conn.request_path == "/instruments" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #instruments <%= else %> /#instruments <%= end %>'>REFURBISHED INSTRUMENTS</a>
        </div>

        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='nav-scroller <%= if @conn.request_path == "/contact" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #contact <%= else %> /#contact <%= end %>'>CONTACT</a>
        </div>

        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='<%= if @conn.request_path == "" do %> nav-active <%= end %>'
           href='/question'>FAQ</a>
        </div>


        <!-- DESKTOP NAVIGATION -->
        <div class="navigation-item hidden-xs hidden-sm">
          <a class='<%= if @conn.request_path == "/" do %> nav-active <%= end %>'
           href="/">HOME</a>
        </div>

        <div class="navigation-item-separator hidden-xs hidden-sm">|</div>

        <div class="navigation-item hidden-xs hidden-sm">
          <a class='nav-scroller <%= if @conn.request_path == "/packages" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #packages <%= else %> /#packages <%= end %>'>PACKAGES</a>
        </div>
        
        <div class="navigation-item-separator hidden-xs hidden-sm">|</div>

        <div class="navigation-item hidden-xs hidden-sm">
          <a class='nav-scroller <%= if @conn.request_path == "" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #soundcloud <%= else %> /#soundcloud <%= end %>'>RECORDINGS</a>
        </div>

        <div class="navigation-item-separator hidden-xs hidden-sm">|</div>

        <div class="navigation-item hidden-xs hidden-sm">
          <a class='nav-scroller <%= if @conn.request_path == "/samples" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #samples <%= else %> /#samples <%= end %>'>SAMPLES</a>
        </div>
        
        <div class="navigation-item-logo hidden-xs hidden-sm">
          <a href="/"><img src="/images/rp_logo.png"></a>
        </div>
        
        <div class="navigation-item hidden-xs hidden-sm">
          <a class='nav-scroller <%= if @conn.request_path == "/instruments" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #instruments <%= else %> /#instruments <%= end %>'>REFURBISHED INSTRUMENTS</a>
        </div>

        <div class="navigation-item-separator hidden-xs hidden-sm">|</div>

        <div class="navigation-item hidden-xs hidden-sm">
          <a class='nav-scroller <%= if @conn.request_path == "/contact" do %> nav-active <%= end %>'
           href='<%= if @conn.request_path == "/" do %> #contact <%= else %> /#contact <%= end %>'>CONTACT</a>
        </div>

        <div class="navigation-item-separator hidden-xs hidden-sm">|</div>

        <div class="navigation-item hidden-xs hidden-sm">
          <a class='<%= if @conn.request_path == "" do %> nav-active <%= end %>'
           href='/question'>FAQ</a>
        </div>

        <div class="hamburger hidden-md hidden-lg">
            <div id="hamburger-icon">
              <span></span>
              <span></span>
              <span></span>
              <span></span>
            </div>
        </div>

      </header>

      <main role="main">
        <%= render @view_module, @view_template, assigns %>
      </main>

      <div class="front-footer">
        <p>COPYRIGHT 2017</p>
      </div>

    </div> <!-- /container -->
    <script src="<%= static_path(@conn, "/js/vendor.js") %>"></script>
    <script src="<%= static_path(@conn, "/js/phoenix.js") %>"></script>
    <script src="https://connect.soundcloud.com/sdk/sdk-3.1.2.js"></script>
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
    
  </body>
</html>
