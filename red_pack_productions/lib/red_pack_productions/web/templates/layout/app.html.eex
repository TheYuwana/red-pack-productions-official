  <body>
    <div class="container">
      
      <div class="pre-header hidden-xs hidden-sm">
        <div class="language-container">
          <a href="<%= page_path(@conn, :locale, [locale: "en", redirect: @conn.request_path]) %>">
              <img src="<%= static_path(@conn, "/images/locale/en.png") %>" <%= if Plug.Conn.get_session(@conn, :locale) == "en" do %> class="active" <% end %>>
          </a>
          <a href="<%= page_path(@conn, :locale, [locale: "nl", redirect: @conn.request_path]) %>">
              <img src="<%= static_path(@conn, "/images/locale/nl.png") %>" <%= if Plug.Conn.get_session(@conn, :locale) == "nl" do %> class="active" <% end %>>
          </a>
        </div>
      </div>
      
     

      <header class="header">

       <img src="/images/rp_logo.png" class="header-logo-mobile hidden-md hidden-lg">

        <!-- MOBILE NAVIGATION -->
        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='<%= if @conn.request_path == "/" do %> nav-active <% end %>'
           href="/"><%= dgettext("general", "navigation-home") %></a>
        </div>

        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='nav-scroller <%= if @conn.request_path == "/packages" do %> nav-active <% end %>'
           href='<%= if @conn.request_path == "/" do %> #packages <% else %> /#packages <% end %>'><%= dgettext("general", "navigation-packages") %></a>
        </div>

        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='nav-scroller <%= if @conn.request_path == "" do %> nav-active <% end %>'
