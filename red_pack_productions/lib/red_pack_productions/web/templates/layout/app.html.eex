        </div>

        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='<%= if @conn.request_path == "/blog" do %> nav-active <% end %>'
           href="/blog"><%= dgettext("general", "navigation-blog") %></a>
        </div>

        <div class="navigation-item-mobile hidden-md hidden-lg">
          <a class='<%= if @conn.request_path == "/question" do %> nav-active <% end %>'
           href='/question'><%= dgettext("general", "navigation-faq") %></a>
        </div>

